<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<p id="notice"><%= notice %></p>
<%= search_form_for @q do |f| %>
  <%= f.label :name_or_description_cont %>
  <%= f.search_field :name_or_description_cont %>
  <%= f.submit %>
<% end %>
<div class="row">
  <div class="col">
    <h2>Your tasks:</h2>
  </div>
  <div class="col">
    <div class ="mb-5">
      <%= link_to "New task", new_task_path, class: "btn btn-primary btn-md active" %>
    </div>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-sm">
    <thead>
      <tr>
        <th <%= sort_link(@q, :name) %> </th>
          <th <%= sort_link(@q, :date) %> </th>
            <th scope="col">
              <span class="pt-1 form-checked-content">Complete
              </span></th>
            <th scope="col">Edit</th>
            <th scope="col">Destroy</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <% if task.deadline < Time.now && !task.isDone? %>
              <tr class="table-danger">
              <% elsif task.isDone? %>
                <tr class="table-secondary">
                <% elsif (task.deadline.to_time.to_i - Time.now.to_i) / 86400 < 3 %>
                  <tr class="table-warning">
                  <% else %>
                    <tr>
                    <% end %>
                    <td><%= task.name %></td>
                    <td><%= (task.deadline) %></td>
                    <% if task.isDone? %>
                      <td class="img-responsive center-block d-block mx-auto">
                        V
                      <% else %>
                        <td>
                        <% end %>
                      </td>
                      <td>  <%= link_to "Edit", edit_task_path(task) %>          </td>
                      <td>  <%= link_to "Destroy", task, method: :delete, data: { confirm: "Are you sure?" } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
