<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col">
    <h2>Your tasks:</h2>
  </div>
  <div class="col">
    <%= link_to '+ New', new_task_path, class: "btn btn-success" %>
  </div>
</div>

<div class="table-responsive">
  <table class="table">

    <thead>
    <tr>
      <th scope="col">Name</th>

      <th scope="col">Date</th>
      <th scope="col">
        <span class="pt-1 form-checked-content">Complete
            </span></th>
      <th scope="col">Edit</th>
      <th scope="col">Destroy</th>
    </tr>
    </thead>

    <tbody>
    <% @tasks.each do |task| %>
      <% if task.deadline < Time.now && !task.isDone? %>
        <tr class="table-danger">
      <% elsif task.isDone? %>
        <tr class="table-secondary">
      <% elsif (task.deadline.to_time.to_i - Time.now.to_i) / 86400 < 3 %>
        <tr class="table-warning">
      <% else %>
        <tr>
      <% end %>

      <td><%= task.name %></td>

      <td><%= (task.deadline) %></td>

      <% if task.isDone? %>
        <td class="img-responsive center-block d-block mx-auto">
          V
      <% else %>
        <td>
      <% end %>
      </td>
      <td>  <%= link_to 'Edit', edit_task_path(task) %>          </td>
      <td>  <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

